<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.Login.loginFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/up"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/down"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100sp"
        android:src="@drawable/logo"
        />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Welcome back !"
        android:textColor="@color/color1"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="To Continue , Login Now"
        android:textStyle="bold"
        android:textSize="14sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25sp"
        android:paddingHorizontal="20sp"
        android:layout_marginTop="50sp"
        app:cardCornerRadius="10sp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/color1"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/mail_img"
                android:layout_width="22sp"
                android:layout_height="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/mail"
                android:layout_marginStart="15sp"
                />
            <EditText
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/mail_img"
                android:layout_marginStart="5sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="false"
                android:background="@color/color1"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/mail_img"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="5sp"
                android:layout_marginStart="10sp"
                android:background="@color/white">
                <EditText
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textStyle="bold"
                    android:hint="Email"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />


            </com.google.android.material.textfield.TextInputLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25sp"
        android:paddingHorizontal="20sp"
        android:layout_marginTop="30sp"
        app:cardCornerRadius="10sp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/color1"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pass_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/pass"
                android:layout_marginStart="15sp"
                />
            <EditText
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/pass_img"
                android:layout_marginStart="5sp"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/color1"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/pass_img"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="5sp"
                android:layout_marginStart="10sp"
                android:background="@color/white"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/color1"
                >
                <EditText
                    android:id="@+id/pass_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Password"
                    android:background="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    />

        </com.google.android.material.textfield.TextInputLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintEnd_toEndOf="@id/card2"
        android:text="Forget Password ?"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="60sp"
        app:layout_constraintStart_toStartOf="@id/card2"
        app:layout_constraintEnd_toEndOf="@id/card2"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:layout_marginTop="40sp"
        android:backgroundTint="@color/color1"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:cornerRadius="10sp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>